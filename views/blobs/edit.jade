extends ../layout

block content
    h1.
        message ID #{message._id}
    form(action='/messages/#{message._id}/edit',method='post',name='updatemessage',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type='text', value='#{message.name}', name='name')
        p Badge: 
            input#inputBadge(type='number', value='#{message.badge}', name='badge')
        p DOB: 
            input#inputDob(type='date', value='#{messagedob}', name='dob')
        p Are you Loved?: 
            input#inputIsLoved(type='checkbox', name='isloved', checked=('#{message.isloved}'==='true' ? "checked" : undefined))
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
